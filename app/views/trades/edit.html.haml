%h1.new-input
  編集する
.container
  = form_for @trade do |f|
    .form-group
      .guest-name
        ゲスト名
      = f.text_field :buyer, class: 'input-form', placeholder: '例) ハピネス花子', type: "text"
    .form-group
      .product-name
        商品名
      = f.text_field :product, class: 'input-form', placeholder: '例) ケアネスTR 500ml'
    .form-group
      .product-price
        価格
      = f.text_field :price, class: 'input-form', placeholder: '例) ¥4180(税込)'
    .form-group
      .tel-number
        電話番号
      = f.text_field :tel, class: 'input-form', placeholder: '例) 090-1234-5678'
    .form-group
      .charge-name
        担当者
      = f.text_field :staff, class: 'input-form', placeholder: '例) ハピネス太郎'

    .form-group
      .payment-date
        お支払い
      = f.text_field :payment_date, class: 'input-form', placeholder: '代未 もしくは日付'
    .form-group
      .delivery-date
        お渡し予定日
      = f.text_field :delivery_date, class: 'input-form', placeholder: '例) 未定 もしくは日付'
    .form-group
      .storage-location
        保管場所
      = f.text_field :storage_location, class: 'input-form', placeholder: '例) バックルーム'
    .form-group
      .contact-data
        連絡の有無
      = f.text_field :contact_data, class: 'input-form', placeholder: '例) 入荷次第連絡'
    .form-group
      .memo-data
        メモ
      = f.text_field :memo, class: 'input-form', placeholder: '例) 連絡は夕方１７時以降で'
    .btn-new
      = link_to :back, class: "button-container", id: "back-btn" do
        戻る
      = f.submit '登録', class: "button-container", id:"register-btn"
